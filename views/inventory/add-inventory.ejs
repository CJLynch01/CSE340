<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<% messages() %>

<form name="addInventoryForm" action="/inv/add-inventory" method="POST" onsubmit="return validateForm()">
    <label for="classification_id">Classification:</label>
    <%= classificationList %>
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" required>
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" required>
    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" required>
    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" step="0.01" value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" required>
    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" required>
    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" required>
    <label for="inv_image">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" value="path/to/no-image-available.jpg" required>
    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="path/to/no-image-available-thumbnail.jpg" required>
    <button type="submit">Add Inventory</button>
</form>