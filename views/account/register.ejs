<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<form id="registerform" action="/register" method="POST" id="loginform">
    <div>
        <label for="fname">First name:</label>
        <input type="fname" id="fname" name="fname" required>
    </div>
    <div>
        <label for="lname">Last name:</label>
        <input type="lname" id="lname" name="lname" required>  
    </div>
    <div>
        <label for="regemail">Email address:</label>
        <input type="regemail" id="regemail" name="regemail" required>  
    </div>
    
        <label for="regpassword">Password:</label>
        <input type="regpassword" id="regpword" name="regpword" required>
        <span id="passwordbtn">Show Password</span>  
    
    <div id="messages">
        <%- messages() %>
    </div>
    <div>
        <button type="regsubmit">Register</button>
    </div>
</form>