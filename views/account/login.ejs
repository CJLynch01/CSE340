<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<form action="/login" method="POST" id="loginform">
    <div>
        <label for="account_email">Email Address:</label>
        <input type="account_email" id="account_email" name="account_email" required>
    </div>
    <div>
        <label for="account_password">Password:</label>
        <input type="account_password" id="account_password" name="account_password" required>  
        <span id="passwordbtn">Show Password</span>  
    </div>
    <div id="messages">
        <%- messages() %>
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
</form>

<p id="registeraccount">
    Don't have an account? <a href="/account/register">Register here</a>
</p>